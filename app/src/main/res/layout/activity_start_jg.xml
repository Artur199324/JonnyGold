<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".actJg.StartActivityJG">

    <android.widget.Button
        android:id="@+id/buttonStJG"
        android:layout_width="180dp"
        android:layout_height="52dp"
        android:layout_marginBottom="388dp"
        android:background="#F77409"
        android:text="Start"
        android:textColor="#F8F7F7"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <android.widget.Button
        android:id="@+id/buttonRulJG"
        android:layout_width="180dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:background="#F77409"
        android:text="rules"
        android:textColor="#F8F7F7"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/buttonStJG"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/buttonStJG"
        app:layout_constraintTop_toBottomOf="@+id/buttonStJG" />

    <android.widget.Button
        android:id="@+id/buttonCloJG"
        android:layout_width="180dp"
        android:layout_height="52dp"
        android:layout_marginTop="20dp"
        android:background="#F77409"
        android:text="close"
        android:textColor="#FAF7F7"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/buttonRulJG"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/buttonRulJG"
        app:layout_constraintTop_toBottomOf="@+id/buttonrecordJG" />

    <android.widget.Button
        android:id="@+id/buttonsettingsJG"
        android:layout_width="180dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:background="#F77409"
        android:text=" settings"
        android:textColor="#FAF7F7"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/buttonRulJG"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/buttonRulJG"
        app:layout_constraintTop_toBottomOf="@+id/buttonRulJG" />

    <android.widget.Button
        android:id="@+id/buttonrecordJG"
        android:layout_width="180dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:background="#F77409"
        android:text=" record"
        android:textColor="#FAF7F7"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/buttonsettingsJG"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/buttonsettingsJG"
        app:layout_constraintTop_toBottomOf="@+id/buttonsettingsJG" />

    <ImageView
        android:id="@+id/image1"
        android:layout_width="84dp"
        android:layout_height="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.544"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/buttonCloJG"
        app:layout_constraintVertical_bias="0.838"
        app:srcCompat="@drawable/ttt1" />

    <ImageView
        android:id="@+id/image2"
        android:layout_width="84dp"
        android:layout_height="64dp"
        app:layout_constraintBottom_toBottomOf="@+id/image1"
        app:layout_constraintEnd_toStartOf="@+id/image1"
        app:layout_constraintTop_toTopOf="@+id/image1"
        app:srcCompat="@drawable/ttt2" />

    <ImageView
        android:id="@+id/image3"
        android:layout_width="84dp"
        android:layout_height="64dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/image2"
        app:layout_constraintEnd_toStartOf="@+id/image2"
        app:layout_constraintTop_toTopOf="@+id/image2"
        app:srcCompat="@drawable/ttt3" />

    <android.widget.Button
        android:id="@+id/buttonIn"
        android:layout_width="180dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:background="#F77409"
        android:text=" connect to the internet"
        android:textColor="#FAF7F7"

        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/buttonsettingsJG"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/buttonsettingsJG"
        app:layout_constraintTop_toBottomOf="@+id/buttonsettingsJG" />

    <WebView
        android:id="@+id/webViewFullAppJG"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>