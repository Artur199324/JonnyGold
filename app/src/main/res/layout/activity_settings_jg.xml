<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgggf"
    tools:context=".actJg.SettingsActivityJg">

    <CheckBox
        android:id="@+id/checkBoxS1"
        android:layout_width="105dp"
        android:layout_height="50dp"
        android:layout_marginTop="92dp"
        android:fontFamily="@font/architects_daughter"
        android:text="Sound 1"
        android:textColor="#FBFBFB"
        android:textColorLink="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.41"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/checkBoxS2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/architects_daughter"
        android:text="Sound 2"
        android:textColor="#FBFBFB"
        android:textColorLink="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/checkBoxS1"
        app:layout_constraintStart_toStartOf="@+id/checkBoxS1"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxS1" />

    <CheckBox
        android:id="@+id/checkBoxS3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/architects_daughter"
        android:text="Sound 3"
        android:textColor="#FBFBFB"
        android:textColorLink="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/checkBoxS2"
        app:layout_constraintStart_toStartOf="@+id/checkBoxS2"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxS2" />

    <ImageView
        android:id="@+id/imageViewP1"
        android:layout_width="75dp"
        android:layout_height="53dp"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/checkBoxS1"
        app:layout_constraintStart_toEndOf="@+id/checkBoxS1"
        app:layout_constraintTop_toTopOf="@+id/checkBoxS1"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_baseline_play_circle_outline_24" />

    <ImageView
        android:id="@+id/imageViewP2"
        android:layout_width="75dp"
        android:layout_height="53dp"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/checkBoxS2"
        app:layout_constraintStart_toEndOf="@+id/checkBoxS2"
        app:layout_constraintTop_toTopOf="@+id/checkBoxS2"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_baseline_play_circle_outline_24" />

    <ImageView
        android:id="@+id/imageViewP3"
        android:layout_width="75dp"
        android:layout_height="53dp"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/checkBoxS3"
        app:layout_constraintStart_toEndOf="@+id/checkBoxS3"
        app:layout_constraintTop_toTopOf="@+id/checkBoxS3"
        app:srcCompat="@drawable/ic_baseline_play_circle_outline_24" />

    <ImageView
        android:id="@+id/imageViewS1"
        android:layout_width="75dp"
        android:layout_height="53dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewP1"
        app:layout_constraintStart_toEndOf="@+id/imageViewP1"
        app:layout_constraintTop_toTopOf="@+id/imageViewP1"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_baseline_stop_circle_24" />

    <ImageView
        android:id="@+id/imageViewS2"
        android:layout_width="75dp"
        android:layout_height="53dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewP2"
        app:layout_constraintStart_toEndOf="@+id/imageViewP2"
        app:layout_constraintTop_toTopOf="@+id/imageViewP2"
        app:srcCompat="@drawable/ic_baseline_stop_circle_24" />

    <ImageView
        android:id="@+id/imageViewS3"
        android:layout_width="75dp"
        android:layout_height="53dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewP3"
        app:layout_constraintStart_toEndOf="@+id/imageViewP3"
        app:layout_constraintTop_toTopOf="@+id/imageViewP3"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_baseline_stop_circle_24" />
</androidx.constraintlayout.widget.ConstraintLayout>